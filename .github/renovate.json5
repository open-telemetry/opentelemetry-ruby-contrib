{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "helpers:pinGitHubActionDigestsToSemver",
    ":separateMultipleMajorReleases"
  ],
  "packageRules": [
    {
      "groupName": "all patch versions",
      "matchUpdateTypes": ["patch"],
      "schedule": ["before 8am every weekday"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "schedule": ["before 8am on Monday"]
    },
    {
      "matchUpdateTypes": ["major"],
      "matchManagers": ["!ruby"],
      "schedule": ["before 8am on Monday"]
    },
    {
      "matchUpdateTypes": ["major"],
      "matchManagers": ["ruby"],
      "dependencyDashboardApproval": true
    },
    {
      "matchFileNames": [".github/workflows/release-*.yaml"],
      "ignoreDeps": ["ruby"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Package version in Dockerfiles",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile$/",
        "/(^|/)Dockerfile\\.[^/]*$/"
      ],
      "matchStrings": [
        "FROM\\s+(?<packageName>.+?):(?<depVersion>[^\\s@]+?)-alpine(?<alpineVersion>\\d+(?:\\.\\d+)?(?:\\.\\d+)?(?:-\\w+)?)(?:(@(?<currentDigest>[sha256:]?\\s+)))?.*\\s"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "loose",
      "currentValueTemplate": "{{depVersion}}-alpine{{alpineVersion}}",
      "extractVersionTemplate": "^(?<version>\\d+(?:\\.\\d+)?(?:\\.\\d+)?)-alpine{{alpineVersion}}$",
    },
    {
      "customType": "regex",
      "description": "Update os version in Dockerfiles",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile$/",
        "/(^|/)Dockerfile\\.[^/]*$/"
      ],
      "matchStrings": [
        "FROM\\s+(?<packageName>.+?):(?<depVersion>[^\\s@]+?)-alpine(?<alpineVersion>\\d+(?:\\.\\d+)?(?:\\.\\d+)?(?:-\\w+)?)(?:(@(?<currentDigest>[sha256:]?\\s+)))?.*\\s"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "loose",
      "currentValueTemplate": "{{depVersion}}-alpine{{alpineVersion}}",
      "extractVersionTemplate": "^{{depVersion}}-alpine(?<version>\\d+(?:\\.\\d+)?(?:\\.\\d+)?)$",
      "depNameTemplate": "{{packageName}}-alpine"
    }
  ],
  "labels": [
    "dependencies"
  ]
}
