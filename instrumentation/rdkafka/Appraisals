%w[0.12.0 0.13.0 0.14.0 0.15.0 0.16.0 0.17.0 0.18.0 0.19.0 0.20.0 0.21.0].each do |version|
  appraise "rdkafka-#{version}" do
    gem 'rdkafka', "~> #{version}"
  end
end

appraise 'rdkafka-latest' do
  gem 'rdkafka'
end
