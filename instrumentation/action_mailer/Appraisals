%w[6.1.0 7.0.0 7.1.0].each do |version|
  appraise "action_mailer-#{version}" do
    gem 'rails', "~> #{version}"
    gem 'logger'
  end
end

if Gem::Version.new(RUBY_VERSION) >= Gem::Version.new('3.1.0')
  %w[7.2.0].each do |version|
    appraise "action_mailer-#{version}" do
      gem 'rails', "~> #{version}"
    end
  end

  appraise 'action_mailer-latest' do
    gem 'rails'
  end
end
